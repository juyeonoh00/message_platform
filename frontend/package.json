{
  "name": "messenger-frontend",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron\"",
    "electron:build": "next build && electron-builder",
    "electron:build:win": "next build && electron-builder --win",
    "electron:build:mac": "next build && electron-builder --mac",
    "electron:build:linux": "next build && electron-builder --linux"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "@stomp/stompjs": "^7.0.0",
    "axios": "^1.6.2",
    "classnames": "^2.3.2",
    "date-fns": "^3.0.6",
    "mammoth": "^1.11.0",
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.4",
    "sockjs-client": "^1.6.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/sockjs-client": "^1.5.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "typescript": "^5.3.3",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.messenger.platform",
    "productName": "Messenger Platform",
    "files": [
      ".next/**/*",
      "public/**/*",
      "electron/**/*",
      "src/**/*",
      "package.json",
      "next.config.js",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/next/**/*",
      "node_modules/react/**/*",
      "node_modules/react-dom/**/*",
      ".next/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/chat_logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/chat_logo.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/chat_logo.png",
      "category": "Office"
    }
  }
}
